        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

            <!-- From Label -->
            <TextView
                android:id="@+id/label_from"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="From"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- From Input -->
            <EditText
                android:id="@+id/input_from"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:hint="From"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_from" />

            <!-- To Label -->
            <TextView
                android:id="@+id/label_to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="To"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/input_from" />

            <!-- To Input -->
            <EditText
                android:id="@+id/input_to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:hint="To"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_to" />

            <!-- Departure Date Label -->
            <TextView
                android:id="@+id/label_departure_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Departure Date"
                app:layout_constraintTop_toBottomOf="@id/input_to"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="16dp" />

            <!-- Departure Date Picker -->
            <TextView
                android:id="@+id/input_departure_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/label_departure_date"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:hint="Select Date"
                android:padding="12dp"
                android:background="?attr/selectableItemBackground"
                android:textColor="@android:color/black" />

            <!-- Passengers Label -->
            <TextView
                android:id="@+id/label_passengers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Passengers"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/label_class"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/input_departure_date" />

            <!-- Class Label -->
            <TextView
                android:id="@+id/label_class"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Class"
                app:layout_constraintLeft_toRightOf="@id/label_passengers"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@id/label_passengers"
                app:layout_constraintTop_toBottomOf="@id/input_departure_date" />

            <!-- Passengers Input -->
            <EditText
                android:id="@+id/input_passengers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:hint="Passengers"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/input_class"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_passengers" />

            <!-- Class Input -->
            <EditText
                android:id="@+id/input_class"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:hint="Class"
                app:layout_constraintLeft_toRightOf="@id/input_passengers"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@id/input_passengers"
                app:layout_constraintTop_toBottomOf="@id/label_class" />



        <Button
            android:id="@+id/search_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="16dp"
            android:backgroundTint="@color/orange"
            android:text="@string/search_button"
            android:textColor="@color/white"
            app:cornerRadius="8dp"
            app:fontFamily="@font/inter_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_class"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

